<div
    class="video"
    data-action="open-video"
    data-youtube="{{ media.src }}"
>
    <div class="video-canvas">
        <button class="video-close"><i></i></button>
        <iframe class="video-youtube" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <div class="video-play"></div>
        <img loading="lazy" class="video-image" src="https://img.youtube.com/vi/{{ media.src }}/{{ media.resolution }}.jpg" alt=""/>
    </div>
</div>